# Object Storage (Supabase S3)
# Get these from: https://supabase.com/dashboard/project/_/settings/api
SUPABASE_PROJECT_ID=your_project_id
SUPABASE_S3_ACCESS_KEY=your_s3_access_key_id
SUPABASE_S3_SECRET_KEY=your_s3_secret_access_key
SUPABASE_S3_REGION=us-east-1
SUPABASE_S3_BUCKET=your-bucket-name
SUPABASE_S3_ENDPOINT=https://${SUPABASE_PROJECT_ID}.supabase.co/storage/v1/s3

# Supabase SQL (PostgreSQL) - Optional, for structured tabular data
# Get these from: https://supabase.com/dashboard/project/_/settings/api
SUPABASE_URL=https://your_project_id.supabase.co
SUPABASE_KEY=your_supabase_anon_key

# Supabase Service Role Key (for admin operations like creating tables)
# Get from: https://supabase.com/dashboard/project/_/settings/api (under "Project API keys")
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key

# Supabase Database Password (for direct PostgreSQL connection)
# Get from: https://supabase.com/dashboard/project/_/settings/database
# This is your PostgreSQL database password set during project creation
SUPABASE_DB_PASSWORD=your_database_password

# MongoDB (for metadata storage)
MONGODB_URI=mongodb://localhost:27017/
MONGODB_DATABASE=media_storage

# Pinecone Vector Database
PINECONE_API_KEY=your_pinecone_api_key
PINECONE_ENVIRONMENT=your_pinecone_environment
PINECONE_INDEX_NAME=media-embeddings

# Gemini API (for text embeddings)
GEMINI_API_KEY=your_gemini_api_key

# Google Cloud / Vertex AI (for multimodal embeddings - optional, fallback to CLIP if not set)
GCP_PROJECT_ID=your-gcp-project-id
GCP_LOCATION=us-central1
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/vertex-ai-key.json  # Set this as environment variable

# Application Settings
UPLOAD_DIR=./uploads
COMPRESSED_DIR=./compressed
MAX_FILE_SIZE=500000000  # 500MB in bytes

# CLIP Model Settings
CLIP_MODEL=ViT-B/32  # Options: ViT-B/32, ViT-B/16, ViT-L/14

# Compression Settings
IMAGE_QUALITY=85  # For lossy compression (1-100)
VIDEO_CRF=23  # Constant Rate Factor for video (0-51, lower is better quality)

